{
  "name": "git-utils-extension",
  "displayName": "Git Utils",
  "description": "Adds utility icons to the Source Control view.",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:git-utils.undoCommit",
    "onCommand:git-utils.openFileInWriteMode",
    "onView:fileHistory",
    "onCommand:git-utils.copyCommitId",
    "onCommand:git-utils.openInGitHub",
    "onCommand:git-utils.showLineHistory"
  ],
  "contributes": {
    "commands": [
      {
        "command": "git-utils.undoCommit",
        "title": "Undo Last Commit",
        "icon": "$(discard)"
      },
      {
        "command": "git-utils.openFileInWriteMode",
        "title": "Open File in Write Mode",
        "icon": "$(edit)"
      },
      {
        "command": "git-utils.showFileHistory",
        "title": "Show File History",
        "icon": "$(refresh)"
      },
      {
        "command": "git-utils.copyCommitId",
        "title": "Copy Full Commit ID"
      },
      {
        "command": "git-utils.openInGitHub",
        "title": "Open in GitHub"
      },
      {
        "command": "git-utils.showLineHistory",
        "title": "Show Line History",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-utils.undoCommit",
          "when": "scmProvider == 'git'",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "git-utils.showFileHistory",
          "when": "resourceExtname != '.git'",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "git-utils.showLineHistory",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git-utils.copyCommitId",
          "when": "(view == fileHistory || view == lineHistory) && viewItem == 'commit'",
          "group": "1_copy"
        },
        {
          "command": "git-utils.openInGitHub",
          "when": "(view == fileHistory || view == lineHistory) && viewItem == 'commit'",
          "group": "2_github"
        }
      ],
      "view/title": [
        {
          "command": "git-utils.showFileHistory",
          "when": "view == fileHistory",
          "group": "navigation"
        },
        {
          "command": "git-utils.showLineHistory",
          "when": "view == lineHistory",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "scm": [
        {
          "id": "fileHistory",
          "name": "File History",
          "when": "git-utils.showFileHistoryView"
        },
        {
          "id": "lineHistory",
          "name": "Line History",
          "when": "git-utils.showLineHistoryView"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "vsce": "^2.15.0"
  }
}
